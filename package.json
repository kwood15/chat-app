{
  "name": "chat-app",
  "author": "Kay Wood",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "evergreen-ui": "^4.0.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-scripts": "2.0.5",
    "socket.io": "^2.1.1",
    "uuid": "^3.3.2"
  },
  "scripts": {
